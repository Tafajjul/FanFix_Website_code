package pages;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class MediaPage extends BasePage {

    @FindBy(xpath = "//*[text()='Select Media']")
    WebElement selectMediaButton;

    @FindBy(xpath = "//*[text()='Add Media']")
    WebElement addMediaButton;

    public MediaPage(WebDriver driver) {
        super(driver);
    }

    public void selectAndAddMedia() {
        selectMediaButton.click();
        addMediaButton.click();
    }
}
